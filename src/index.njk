---
layout: base.njk
section: home
---
<div class="home-page">
{#	<div class="home-page__bg-square"></div>#}

  {# Hero #}
  <div class="hero">
    <div class="hero__col">
      <h1 class="hero__title gradient-text">{{ home.title }}</h1>
      {% if home.body %}
        <div class="hero__body">{{ home.body | markdown | safe }}</div>
      {% endif %}
    </div>
    <div class="hero__col">
      {% image
        home.image,
        home.image_alt,
        "(min-width: 1024px) 50vw, 100vw",
        "hero__image shadow",
        "eager"
      %}
    </div>
  </div>

  {# Social Links #}
  <div class="social-links">
    <h2 class="social-links__title">Learn More about me</h2>
    <div class="social-links__container">
      <a href="https://www.linkedin.com/in/dstorozhuk/" target="_blank" rel="noopener noreferrer" class="social-link">
        {{ "src/assets/img/icon-linkedin.svg" | svg | safe }}
        <span>LinkedIn</span>
      </a>
      <a href="https://github.com/dstorozhuk" target="_blank" rel="noopener noreferrer" class="social-link">
        {{ "src/assets/img/icon-github.svg" | svg | safe }}
        <span>GitHub</span>
      </a>
      <a href="https://dev.acquia.com/person/community/dmytro-storozhuk" target="_blank" rel="noopener noreferrer" class="social-link">
{#        {{ "src/assets/img/acquia-cloud.svg" | svg | safe }}#}
        <span>Acquia Certified</span>
      </a>
      <a href="https://www.drupal.org/u/dstorozhuk" target="_blank" rel="noopener noreferrer" class="social-link">
{#        {{ "src/assets/img/acquia_drupal_cms_0.svg" | svg | safe }}#}
        <span>Drupal.org</span>
      </a>
    </div>
  </div>

  {# Projects section is hidden
  <div class="list-header">
    <h2 class="list-header__title">Projects</h2>
    <a class="btn btn--outline btn--sm" href="/projects">View All</a>
  </div>
  {% from "macros/projectlist.njk" import projectlist %}
  {{ projectlist(projects = collections.project | reverse) }}
  #}

  {# Articles section is hidden
  <div class="list-header">
    <h2 class="list-header__title">Articles</h2>
    <a class="btn btn--outline btn--sm" href="/blog">View All</a>
  </div>
  {% from "macros/articlelist.njk" import articlelist %}
  {{ articlelist(
    articles = collections.post | reverse,
    show_tags = false,
    limit = 3
  ) }}
  #}

  {# Gallery Section #}
  {% include "partials/gallery.njk" %}

  {# Contact Form Section #}
  <div class="contact-section">
    <h2 class="contact-section__title">Get in touch</h2>
    <p>If you have any questions or need help with Drupal or WordPress  - don't hesitate to contact with me.</p>

    {% include "partials/form.njk" %}
  </div>
</div>
